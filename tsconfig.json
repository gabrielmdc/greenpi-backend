{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@repositories": ["repositories"],
      "@repositories/*": ["repositories/*"],
      "@services/*": ["services/*"],
      "@models/*": ["models/*"],
      "@validation/*": ["validation/*"],
      "@routes/*": ["routes/*"],
      "@plugins/*": ["plugins/*"],
      "@config": ["config"]
    }
  },
  "exclude": ["node_modules"]
}
